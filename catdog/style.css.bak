body {
    /* background-color: rgba(250, 235, 215, 0.616); */
    background-color: rgba(224, 224, 224, 0.267);
  }
  .line {
    border: none;
    border-radius: 15px;
    background-color: #4949496b;
    color: #33333360;
    width: 100%;
    height: 2px;
    opacity: 0.3;
  }
  .line2 {
    border: none;
    border-radius: 15px;
    background-color: #4949496b;
    color: #33333360;
    width: 70%;
    height: 2px;
    opacity: 0.3;
  }



  /* ШАПКА */
  header {
    width: 90%;
    margin: auto;
    position: sticky;
    top: 0;
    background: white;
    opacity: 0.9;
    z-index: 10;
  }
  .header-words-1 {
    float: left;
    margin-left: 20%;
    margin-top: 70px;
    width: 40%;
    height: 50px;
    font-size: 22px;
    font-weight: bold;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    font-family: 'Playfair Display', serif;
    /* background-color: aqua; */


    /* border: 2px solid black; */
    border-radius: 20px;
    background-color: rgba(223, 223, 223, 0.185);
}
.pod4erk {
    color: rgba(94, 88, 74, 0.712); 
    text-decoration: none;
    transition:  .3s ease;
}
.pod4erk:hover{
    color: rgb(32, 30, 25);
    text-decoration: none;
    font-size: 26px;
    
    background-color: rgba(216, 156, 152, 0.3);
    border-radius: 6px;
    padding: 4px;
}
.btn-vk {
  color: #b85d5d; 
  text-decoration: none;
  transition:  .4s ease;
}
.btn-vk:hover {
  color: #a78383; 
  text-decoration: none;
}


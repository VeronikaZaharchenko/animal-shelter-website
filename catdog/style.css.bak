  .main-left {
    width: 15%;
    height: 600px;
    float: left;

    background-image: url(../img/sledi1.png);
    background-size: 50%;
    opacity: 0.2;
    background-repeat: repeat-y;
    background-position-x: 50%;
  }
  .main-mid {
    width: 70%;
    height: 600px;
    float: left;

    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: space-around;
  }
  .main-mid>div {
    width: 23%;
    height: 98%;
    margin-top: 0.5%;
  }
  .block>img {
    width: 100%;
    border-radius: 20px;
  }
  .main-right {
    width: 15%;
    height: 600px;
    float: left;

    background-image: url(../img/sledi2.png);
    background-size: 50%;
    opacity: 0.2;
    background-repeat: repeat-y;
    background-position-x: 50%;
  }

  .p1 {
    font-family: 'Lato', sans-serif;
    font-size: 20px;
    text-align: center;
    color: rgb(73, 73, 73);
  }
  .p2 {
    font-family: 'Lato', sans-serif;
    font-size: 28px;
    color: rgba(206, 154, 150, 0.774);
    font-weight: 700;
    text-align: center;
  }
  .p3 {
    font-family: 'Source Sans Pro', sans-serif;
    font-size: 26px;
  }


























